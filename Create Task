#setup
wn = trtl.Screen()
wn.bgcolor('gray')

font_setup = ("Arial", 20, "normal")
score_pen = trtl.Turtle()
score_pen.penup()
score_pen.hideturtle()
score_pen.goto(0,300)

#Variables
def update_score():
    global scoreS
    score =+ 1
    score_pen.clear()
    (score_pen.write(score,font=font_setup))

def banana_click():
  update_score()

clicker.onclick(banana_click())


wn.listen()
wn.mainloop()
